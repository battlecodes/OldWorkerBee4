<UserControl x:Class="WorkerBee.Components.TopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorkerBee.Components"
             mc:Ignorable="d"
             d:DesignWidth="550">
    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        
        <!-- Logo -->
        <local:BeeWithLabelLogo
            HorizontalAlignment="Left"/>
        
        
        <!-- Book -->
        <local:BookLogo
            Grid.Column="1"
            HorizontalAlignment="Right"
            Content="{Binding BookLogoName, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}"/>

    </Grid>
    
</UserControl>
